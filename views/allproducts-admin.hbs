<div class="container-fluid" style="margin-top: 20px;">
    <h2>All products</h2>
    <br>
    <table class="table table-striped">
        <th>
            <td>
                Product Name
            </td>
            <td>
                Produc Price
            </td>
            <td>
                Description
            </td>
            <td>
                Address
            </td>
            <td>Location</td>
            <td>
                Edit
            </td>
            <td>
                Delete
            </td>
        </th>
        {{#each products}}
            <tr>
                <td></td>
                <td>{{this.productname}}</td>
                <td>{{this.productprice}}</td>
                <td>{{this.productdesc}}</td>
                <td>{{this.address}}</td>
                <td>{{this.location}}</td>
                <td><a href="" class="btn btn-secondary">Edit</a></td>
                <td><a href="" class="btn btn-danger">Delete</a></td>
            </tr>
           
        {{/each}}
    </table>
</div>